<div class="row panel">
<section class="columns large-9 medium-9 small-16 large-centered medium-centered small-centered">
	<div class="center">
		<h2 class="text-center"><small>Please, Sign in</small></h2>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div><br />
				<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
			</div>

			<div><br />
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
			</div>

			<% if devise_mapping.rememberable? -%>
				<div class="space">
					<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				</div>
			<% end -%>

			<div><%= f.submit "Sign in", class: 'button small radius round' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</section>
</div>
